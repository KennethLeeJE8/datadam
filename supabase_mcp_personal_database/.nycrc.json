{
  "extends": "@istanbuljs/nyc-config-typescript",
  "check-coverage": true,
  "all": true,
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "**/*.d.ts",
    "**/*.test.ts",
    "**/*.spec.ts",
    "src/server/index.ts",
    "tests/**/*",
    "coverage/**/*",
    "dist/**/*"
  ],
  "reporter": [
    "text",
    "html",
    "lcov"
  ],
  "report-dir": "coverage",
  "branches": 80,
  "lines": 80,
  "functions": 80,
  "statements": 80
}